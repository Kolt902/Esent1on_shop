# Database connection (required)
DATABASE_URL=postgres://username:password@hostname:port/databasename

# Telegram Bot Token (required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Web App URL (optional, defaults to Railway or system-provided domain)
# WEB_APP_URL=https://your-app-url.domain.com

# Node environment (required, production for Railway)
NODE_ENV=production